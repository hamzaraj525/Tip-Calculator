<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="2"
    android:layout_column="4"
    android:padding="1dp">

    <TableRow android:layout_marginTop="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:text="10%"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:text="15%"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="10dp"
            android:text="20%"
            android:textSize="15dp"
            android:textStyle="bold" />


    </TableRow>


    <TableRow>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Tip"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTip10"
            android:layout_width="107dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/edittip2"
            android:layout_width="107dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10" />

        <TextView
            android:id="@+id/edittip3"
            android:layout_width="107dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>


    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Total"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtTotal1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/edittota2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10" />

        <TextView
            android:id="@+id/edittota3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10"
            android:inputType="textPersonName" />

    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:text="Custom"
            android:textSize="15dp"
            android:textStyle="bold" />

        <SeekBar
            android:id="@+id/seekBar2"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1"
            android:indeterminate="false"
            android:progress="0"
            android:progressDrawable="@drawable/track"
            android:thumb="@drawable/thumb" />

        <TextView
            android:id="@+id/txtSeekPercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="60dp"
            android:text="0"
            android:textSize="15dp"
            android:textStyle="bold" />


    </LinearLayout>


    <TableRow>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Tip"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editlast1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="0dp"
            android:text="Total"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editlast2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_margin="4dp"
            android:background="@drawable/table_backgound"
            android:ems="10"
            android:inputType="textPersonName" />
    </TableRow>


</TableLayout>